
@model List<Olx2._0.Models.ProductModel>

@Styles.Render("~/Content/Products/addproduct.css")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HTML 5 Boilerplate</title>

</head>
<body>
    <div style="display:flex;justify-content:center">
        <div class="product-form">
            <h2>Product Form</h2>

            @foreach (var itm in Model)
            {
                using (Html.BeginForm("update", "ProductEdit", FormMethod.Post, new { enctype = "multipart/form-data" }))

                {
                    <label for="productName">Product Name:</label>
                    <input type="text" id="productName" name="productName" value="@itm.productName" required>

                    <label for="productDescription">Product Description:</label>
                    <input type="text" id="productDescription" name="productDescription" value="@itm.productDescription" required>



                    <label for="contactNumber">Contact Number:</label>
                    <input type="tel" id="contactNumber" name="contactNumber" value="@itm.contactNumber" pattern="[0-9]{10}" placeholder="e.g., 1234567890" required>

                    <label for="userEmail">User Email:</label>
                    <input type="email" id="userEmail" name="userEmail" value="@itm.userEmail" required>

                    @Html.Hidden("proid", itm.Id)

                    <button type="submit">Submit</button>

                }


            }

        </div>
    </div>



</body>

</html>

