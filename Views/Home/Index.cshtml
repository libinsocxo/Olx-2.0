@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HTML 5 Boilerplate</title>
    <script src="~/Scripts/Customscripts/knockout.js"></script>
    <script src="https://kit.fontawesome.com/844521e4f0.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body>
        <div class="sell_btn_div">
                <button type="button" class="sell_btn_icon" onclick="window.location.href='@Url.Action("Index", "Product")'">
                    <i class="fa-solid fa-plus"></i>
                    <span style="margin-left:10px">Sell</span>
                </button>
        </div>
    <hr/>
    <div class="products_main_container" style="display:flex">


        @if (TempData["Emptydata"] != null)
        {
            <div class="alert alert-danger" role="alert" style="display:flex;justify-content:center;width:100%">
                @TempData["Emptydata"]
            </div>
        }

        @foreach (var pro in Model)
        {
            <div class="card" style="width: 18rem;margin:10px">
                <img src="~/Uploads/@pro.ImageFile" height="300" width="300"  class="card-img-top" alt="...">
                <div class="card-body" style="display:flex;flex-direction:column">
                    <h5 class="card-title">@pro.productName</h5>
                    <span>&#8377 @pro.Price</span>
                    <a href="@Url.Action("Index", "Productview", new { id = pro.Id })" class="btn btn-primary" style="margin-top:10px">View</a>
                </div>
            </div>
        }

    </div>


    
</body>

</html>